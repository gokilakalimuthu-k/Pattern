import java.util.*;
public class ZNumberPattern{
public static void main(String[] args){
Scanner sc=new Scanner(System.in);
int n=sc.nextInt();
for(int i=1;i<=n;i++){
for(int j=1;j<=n;j++){
if(i==1|| i==n || (j==n-i+1)){
System.out.print(j+" ");
}
else{
System.out.print("  ");
}
}
System.out.println();
}
}
}
